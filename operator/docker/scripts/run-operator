if [ -z $LOGGING_KAFKA_EP ]
then
    LOG4J_CONFIG_PATH=/log4j-console-only.yaml
else
    cat /log4j-with-kafka.yaml | envsubst > log4j-with-kafka-filled.yaml
    LOG4J_CONFIG_PATH=/log4j-with-kafka-filled.yaml
fi

java -Dlog4j2.configurationFile=file:${LOG4J_CONFIG_PATH} -cp "/usr/share/java/responsive-operator/*" dev.responsive.k8s.operator.OperatorMain ${OPERATOR_OPTS} -controllerUrl ${CONTROLLER_EP} -secretsFile "/etc/responsive-operator/secrets.properties"
