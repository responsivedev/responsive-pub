version: '3'
services:
  broker:
    image: confluentinc/cp-kafka:7.6.1
    container_name: broker
    hostname: broker
    ports:
      - "9092:9092"
      - "9101:9101"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: 'CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_INTERNAL:PLAINTEXT'
      KAFKA_ADVERTISED_LISTENERS: 'PLAINTEXT://broker:9092,PLAINTEXT_INTERNAL://broker:29092'
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS: 0
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_JMX_PORT: 9101
      KAFKA_JMX_HOSTNAME: localhost
      KAFKA_PROCESS_ROLES: 'broker,controller'
      KAFKA_CONTROLLER_QUORUM_VOTERS: '1@broker:29093'
      KAFKA_LISTENERS: 'PLAINTEXT://broker:9092,CONTROLLER://broker:29093,PLAINTEXT_INTERNAL://broker:29092'
      KAFKA_LOG_RETENTION_CHECK_INTERVAL_MS: 1000
      KAFKA_INTER_BROKER_LISTENER_NAME: 'PLAINTEXT_INTERNAL'
      KAFKA_CONTROLLER_LISTENER_NAMES: 'CONTROLLER'
      KAFKA_LOG_DIRS: /volumes/kafka/data
      KAFKA_DATA_DIRS: /volumes/kafka/data
      CLUSTER_ID: '_MLP7I7sTJKTQC87-IK0LQ'
    networks:
      backend:
        ipv4_address: 10.0.0.20

  scylla:
    image: scylladb/scylla:5.4
    container_name: scylla
    hostname: scylla
    command: --smp 1 --options-file /etc/scylla/scylla.yaml --memory 750M --overprovisioned 1 --api-address 0.0.0.0
    ports:
      - "9042:9042"
    volumes:
      - ./volumes/scylla/data:/var/lib/scylla/data:rw
      - ./volumes/scylla.yaml:/etc/scylla/scylla.yaml
    networks:
      backend:
        ipv4_address: 10.0.0.30

  application1:
    image: us-central1-docker.pkg.dev/molten-verve-216720/responsive-repository/e2e-test:${KAFKA_CLIENT_VERSION}
    container_name: application1
    hostname: application1
    depends_on:
      - broker
      - scylla
    environment:
      NAME: e2e
      INPUT_TOPIC: input
      OUTPUT_TOPIC: output
      PARTITIONS: 8
      NUM_KEYS: 100
      MAX_OUTSTANDING: 10000
      E2E_APP_MODE: APPLICATION
      CONFIG_PATH: "/app.properties"
    volumes:
      - ./volumes/app.properties:/app.properties
    networks:
      backend:
        ipv4_address: 10.0.0.40

  application2:
    image: us-central1-docker.pkg.dev/molten-verve-216720/responsive-repository/e2e-test:${KAFKA_CLIENT_VERSION}
    container_name: application2
    hostname: application2
    depends_on:
      - broker
      - scylla
    environment:
      NAME: e2e
      INPUT_TOPIC: input
      OUTPUT_TOPIC: output
      PARTITIONS: 8
      NUM_KEYS: 100
      MAX_OUTSTANDING: 10000
      E2E_APP_MODE: APPLICATION
      CONFIG_PATH: "/app.properties"
    volumes:
      - ./volumes/app.properties:/app.properties
    networks:
      backend:
        ipv4_address: 10.0.0.41

  driver:
    image: us-central1-docker.pkg.dev/molten-verve-216720/responsive-repository/e2e-test:${KAFKA_CLIENT_VERSION}
    container_name: driver
    hostname: driver
    depends_on:
      - broker
      - scylla
    environment:
      NAME: e2e
      INPUT_TOPIC: input
      OUTPUT_TOPIC: output
      PARTITIONS: 8
      NUM_KEYS: 100
      MAX_OUTSTANDING: 10000
      E2E_APP_MODE: DRIVER
      CONFIG_PATH: "/app.properties"
    volumes:
      - ./volumes/app.properties:/app.properties
    networks:
      backend:
        ipv4_address: 10.0.0.50

networks:
  backend:
    driver: bridge
    ipam:
      config:
      - subnet: 10.0.0.0/24
